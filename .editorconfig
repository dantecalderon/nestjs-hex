root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 80

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js}]
charset = utf-8

# 4 space indentation
[*.{ts,js,json}]
indent_style = space
indent_size = 2
